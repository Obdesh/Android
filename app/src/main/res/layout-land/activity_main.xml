<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_margin="10dp">


    <EditText
        android:id="@+id/Field"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:ems="50"
        android:inputType="numberDecimal"
        android:autofillHints="" />


    <Button
        android:id="@+id/buttonE"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/E"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/buttonE"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/buttonE"
        android:gravity="center"
        android:text="@string/Dot"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonE"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/buttonE"
        android:gravity="center"
        android:text="@string/_3"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button3"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button3"
        android:gravity="center"
        android:text="@string/_2"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button2"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button2"
        android:gravity="center"
        android:text="@string/_1"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button0"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/buttonDot"
        android:layout_marginEnd="71dp"
        android:layout_alignEnd="@id/buttonDot"
        android:gravity="center"
        android:text="@string/_0"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/buttonP"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonE"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:text="@string/P"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonP"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/buttonP"
        android:gravity="center"
        android:text="@string/_6"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />
    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button6"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button6"
        android:gravity="center"
        android:text="@string/_5"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button5"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button5"
        android:gravity="center"
        android:text="@string/_4"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/buttonM"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonP"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:text="@string/M"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonM"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/buttonM"
        android:gravity="center"
        android:text="@string/_9"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button9"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button9"
        android:gravity="center"
        android:text="@string/_8"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button8"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button8"
        android:gravity="center"
        android:text="@string/_7"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/button0"
        android:layout_alignStart="@id/button0"
        android:layout_marginStart="-70dp"
        android:gravity="center"
        android:text="@string/Mul"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button1"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button1"
        android:gravity="center"
        android:text="@string/D"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/buttonClean"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button4"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button4"
        android:gravity="center"
        android:text="@string/Clean"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/button7"
        android:layout_marginEnd="70dp"
        android:layout_alignEnd="@id/button7"
        android:gravity="center"
        android:text="@string/C"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

</RelativeLayout>